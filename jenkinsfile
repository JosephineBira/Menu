pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git url: ''
            }
        }
        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
        stage('Deploy') {
            steps {
                sh 'echo "Deploying application..."'
                // Add your deployment steps here
            }
        }
    }
    post {
        always {
            echo 'Pipeline finished!'
        }
    }
}
