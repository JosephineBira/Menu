pipeline {
    agent any
    tools "MAVEN"
    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/JosephineBira/Menu.git'
            }
        }
        stage('Build') {
            steps {
                bat 'mvn clean install'
            }
        }
        stage('Test') {
            steps {
                bat 'mvn test'
            }
        }
        stage('Deploy') {
            steps {
                bat 'echo "Deploying application"'
            }
        }
    }
    post {
        always {
            echo 'Pipeline finished'
        }
    }
}
